<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="8dp" >

    <TextView
        android:id="@+id/tvThChangeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff0000" />

    <LinearLayout
        android:id="@+id/llthChangeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:padding="4dp" >

        <ImageView
            android:id="@+id/ticked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:src="@android:drawable/ic_popup_sync" >

        </ImageView>

        <TextView
            android:id="@+id/tvThChangeInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/thChangeInfo"
            android:textColor="@color/secondaryGreen" />
    </LinearLayout>

    <Button
        android:id="@+id/btUpdateTh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actualitza" 
        android:background="@drawable/btn_new_button_normal"/>

</LinearLayout>