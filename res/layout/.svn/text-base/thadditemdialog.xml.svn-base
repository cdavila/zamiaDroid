<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="3dp" >
    
        <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/thGenus" 
                android:textColor="@color/secondaryGreen"/>
        
    <EditText android:hint="@string/etHintThGender" 
        	android:id="@+id/etAddItemGender" 
        	android:layout_height="wrap_content" 
        	android:layout_width="fill_parent"/>
    
    <TableLayout android:layout_marginTop="5dp" android:stretchColumns="*"  android:id="@+id/tableLayout1" android:layout_width="wrap_content" android:layout_height="wrap_content">
           
           <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/etHintThSpEp"
                android:textColor="@color/secondaryGreen" />
                    
        <TableRow  android:layout_height="wrap_content" android:id="@+id/tableRow3" android:layout_width="fill_parent">
           
            <EditText android:id="@+id/etAddItemSpecEp" 
                android:layout_height="wrap_content" 
                android:layout_width="wrap_content"/>
            
            <EditText android:hint="@string/thAuthor" 
                android:id="@+id/etAddItemSpecEpAuth" 
                android:layout_height="wrap_content" 
                android:layout_width="wrap_content" 
                android:layout_weight="1"/>
        </TableRow>

        <Spinner
            android:id="@+id/spThRank"
            android:layout_margin="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/thesaurusRank"
            android:background="@drawable/btn_new_button_spinner" />

        	<TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/etHintThSpInfraEp"
                android:textColor="@color/secondaryGreen" />

            <TableRow
                android:id="@+id/tableRow6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <EditText
                    android:id="@+id/etAddItemInfraSpecEp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >
                    <requestFocus />
                </EditText>

                <EditText
                    android:id="@+id/etAddItemInfraSpecEpAuth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/thAuthor" />
            </TableRow>
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/thKeys"
            android:textColor="@color/secondaryGreen" />

        <TableRow android:layout_weight="1" android:layout_height="wrap_content" android:id="@+id/tableRow7"  android:layout_width="fill_parent" >
            
            <EditText android:hint="@string/etHintThPrimKey" 
                android:id="@+id/etAddItemPrimKey" 
                android:layout_height="wrap_content" 
                android:layout_width="wrap_content"/>
            
            <EditText android:hint="@string/etHintThSecKey" 
                	android:id="@+id/etAddItemSecKey" 
                	android:layout_height="wrap_content" 
                	android:layout_width="wrap_content" 
                	android:layout_weight="1"/>
        </TableRow>
        
    </TableLayout>

    <Button
        android:id="@+id/btAddThItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@drawable/btn_new_button_normal"
        android:layout_marginTop="4dp"
        android:text="@string/thAddNewItem" />

</LinearLayout>
  </ScrollView>