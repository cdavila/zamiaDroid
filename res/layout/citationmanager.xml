    <TableRow android:id="@+id/tableRow1" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <LinearLayout android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/linearLayout1" android:padding="2dp">
            <TextView android:id="@+id/tvRschDesc" android:layout_height="wrap_content" android:layout_width="wrap_content"></TextView>
