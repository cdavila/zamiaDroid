</LinearLayout>
  
  
    <LinearLayout android:background="@color/gris" android:id="@+id/linearLayout1" android:layout_height="wrap_content" android:layout_width="fill_parent">
        <CheckBox android:id="@+id/cbSelectAllCitations" android:layout_width="wrap_content" android:layout_height="wrap_content"></CheckBox>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/filterBy"
            android:textSize="12sp" >
</TextView>
        <Button android:textSize="12sp" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/btApplyFilter" android:text="@string/filterTypeField"></Button>
        <Button android:textSize="12sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/btFilterByLocation" android:text="@string/filterTypeLocation"></Button>
        <Button android:textSize="12sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/btFilterByDate" android:text="@string/filterTypeDate"></Button>

        <Button
            android:id="@+id/btFilterByTaxon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btFilterTaxon" />
        
    </LinearLayout>
    
        
          <LinearLayout android:background="@color/background2" android:layout_height="wrap_content" android:id="@+id/llFilter" android:layout_width="fill_parent" android:visibility="gone">

              <LinearLayout
                  android:id="@+id/linearLayout7"
                  android:layout_width="wrap_content"
                  android:layout_height="fill_parent"
                  android:layout_weight="1" >
    
                  
	               <TextView android:text="" 
	                  android:padding="4dp" 
	                  android:textColor="#ffffffff" 
	                  android:id="@+id/tvFilterMessage" 
	                  android:layout_height="wrap_content" 
