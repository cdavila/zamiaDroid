	              <ImageButton android:id="@+id/btRemoveFilter" android:layout_height="wrap_content" android:layout_width="wrap_content"></ImageButton>
                  
              </LinearLayout>

          </LinearLayout>

          <LinearLayout
              android:id="@+id/linearLayout4"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
