<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="fill_parent" android:padding="6dp" android:background="@color/grisnegre" android:layout_width="fill_parent">
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
         >

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical" 
            android:layout_marginRight="5sp">

            <TextView
                android:id="@+id/tvRemoteDBId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/tvRemoteDBDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                 />
        </LinearLayout>
 
    </LinearLayout>

    <LinearLayout android:id="@+id/LinearLayout05"
	        android:layout_height="fill_parent" android:layout_width="wrap_content"
	        	        android:gravity="right"
	        	        android:layout_weight="0">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/ibRemoteDBArrowUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/arrow"
                android:maxHeight="22dp"
                android:maxWidth="22dp" >
            </ImageButton>

            <ImageButton
                android:id="@+id/ibRemoteDBArrowDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/arrow_down"
                android:maxHeight="22dp"
                android:maxWidth="22dp" >
            </ImageButton>
        </LinearLayout>

		   <ImageButton
		       android:id="@+id/ibRemoteDBActive"
		       android:layout_width="wrap_content"
		       android:layout_height="wrap_content"
		       android:layout_gravity="center_vertical"
		       android:layout_marginLeft="8sp" >

	</ImageButton>
		        

	</LinearLayout>

</LinearLayout>
