<?xml version="1.0" encoding="utf-8"?>

 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/linearLayout1" android:layout_width="wrap_content" android:layout_height="fill_parent" android:orientation="vertical">
	    
	 <LinearLayout android:id="@+id/container"
	 android:layout_height="wrap_content" android:gravity="left|center"
	 android:layout_width="wrap_content" android:paddingBottom="5dp"
	 android:paddingTop="5dp" android:paddingLeft="5dp" >
	 
		 <TextView android:id="@+id/tvProjRepType" android:layout_width="wrap_content"
		 android:layout_height="wrap_content" android:gravity="center"
		 android:textColor="#FFFF00"
		 android:textSize="12dp"></TextView>
		 
		 <TextView android:id="@+id/tvProjRepName"
		 android:layout_width="wrap_content" android:layout_height="wrap_content"
		 android:layout_marginLeft="5dp" android:textColor="#0099CC" android:textSize="24dp"></TextView>
	 
	  </LinearLayout>
    
     <TextView android:textSize="14dp" android:id="@+id/tvProjRepDesc" 
         android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
     
</LinearLayout>
