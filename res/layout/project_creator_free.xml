<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ff333333"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
            android:id="@+id/nomTipusEstudi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/projName" >
        </TextView>

        <EditText
            android:id="@+id/eTextEstudi"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ff333333"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
            android:id="@+id/TextView03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tvChooseTh" >
        </TextView>

        <CheckBox
            android:id="@+id/chNoTh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="" >
        </CheckBox>

        <Spinner
            android:id="@+id/thList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </Spinner>
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ff333333"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bAfegirAtribut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/brsAddField" >
        </Button>
        <!-- <Button android:text="@string/bAddPredAttribute" android:id="@+id/bAddPredAttribute" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button> -->

        <LinearLayout
            android:id="@+id/llCreateProject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right" >

            <Button
                android:id="@+id/bCrearEstudi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_new_button_normal"
                android:text="@string/bProjectCreate" >
            </Button>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:background="@color/background2"
        android:orientation="vertical"
        android:padding="4dp" >

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/projectFieldList"
            android:textColor="@color/white" />
    </LinearLayout>

    <ListView
        android:id="@+id/llistaAtributs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>