<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
     >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:padding="4dp" >

        <ImageButton
            android:id="@+id/btPhotoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/ic_menu_camera" 
            android:layout_marginTop="4dp"/>

        <ImageButton
            android:id="@+id/btAddFromGallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/ic_menu_gallery" />

    
        <ImageButton
            android:id="@+id/btRmPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@android:drawable/ic_menu_delete" />

        <ImageButton
            android:id="@+id/btViewPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/ic_menu_view"
            android:layout_marginTop="4dp" />

        <ImageButton
            android:id="@+id/btShowPath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/ic_menu_info_details" 
            android:layout_marginTop="4dp"/>

        <ImageButton
            android:id="@+id/btEditOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/ic_menu_close_clear_cancel"
            android:layout_marginTop="4dp" />
    
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
        <HorizontalScrollView
        android:id="@+id/hsImageScroll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/llPhotosList"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

        </LinearLayout>

       

    </HorizontalScrollView>

     <TextView
         android:id="@+id/etPhotoPath"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_margin="3dp"
         />
        
    </LinearLayout>

    
    
</LinearLayout>
