<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal"
        android:padding="5dp" >

        <LinearLayout
            android:id="@+id/llAddPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="5dp"
             >

            <ImageButton
                android:id="@+id/ibAddPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/polygon_add_point" />

            <TextView
                android:id="@+id/tvAddPoint"
                style="@style/ZamiaSmallTextAppereance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/polAddPoint" />
        </LinearLayout>

             <LinearLayout
            android:id="@+id/llgpsWaiting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="5dp"
            android:visibility="gone"
             >

            <ImageButton
                android:id="@+id/ibAddPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/polygon_gps" />

            <TextView
                android:id="@+id/tvAddPoint"
                style="@style/ZamiaSmallTextAppereance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/waitingGPS" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/llVertexCount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="5dp"
             >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/tvPolygonCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="0"
                    android:textColor="@color/secondaryGreen"
                    android:textSize="16dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvPolygonCountText"
                style="@style/ZamiaSmallTextAppereance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/polPoints" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llShowPolygon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginRight="5dp"
             >

            <ImageButton
                android:id="@+id/ibShowPolygon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/polygon_view" />

            <TextView
                android:id="@+id/textView1"
                style="@style/ZamiaSmallTextAppereance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/polEdit" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llPolygonRemove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="5dp"
             >

            <ImageButton
                android:id="@+id/ibPolygonRemove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/polygon_remove" />

            <TextView
                android:id="@+id/textView1"
                style="@style/ZamiaSmallTextAppereance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/polRemove" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>