<LinearLayout android:layout_width="fill_parent" android:background="@color/background2" android:id="@+id/linearLayout1" android:layout_height="wrap_content" android:padding="5dp" android:layout_marginTop="10dp">
    <TextView android:textColor="#ffffffff" android:text="@string/thInfoSearchField" android:layout_height="wrap_content" android:id="@+id/textView3" android:layout_width="wrap_content"></TextView>
</LinearLayout>

<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/llRegisterViewer" android:orientation="vertical" android:layout_margin="2dp">
    <TextView android:text="@+id/TextView03" android:layout_height="wrap_content" android:id="@+id/tvThNumItems" android:layout_width="wrap_content"></TextView>
    <LinearLayout android:layout_width="fill_parent" android:id="@+id/linearLayout6" android:layout_height="wrap_content">
        <AutoCompleteTextView android:id="@+id/thAutoView" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_weight="1"></AutoCompleteTextView>
        <LinearLayout android:layout_width="wrap_content" android:id="@+id/linearLayout7" android:layout_height="fill_parent">
            <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/thInfoButton"></ImageButton>
        </LinearLayout>
    </LinearLayout>
    <TableLayout android:stretchColumns="*" android:layout_width="fill_parent" android:layout_height="fill_parent" android:visibility="gone" android:id="@+id/tlRegisterFields">
        <TableRow android:background="#ff333333" android:id="@+id/tableRow4" android:layout_height="wrap_content" android:layout_width="fill_parent">
            <TextView android:text="@string/thInfoAuthors" android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
            <TextView android:text="@string/thInfoKeys" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/textView2"></TextView>
        </TableRow>
        <TableRow android:layout_height="wrap_content" android:id="@+id/tableRow1" android:layout_width="fill_parent">
            <TextView android:padding="2dp" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/tvAuthor"></TextView>
            <TextView android:padding="2dp" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/tvIcode"></TextView>
        </TableRow>
        <TableRow  android:layout_height="wrap_content" android:id="@+id/tableRow2" android:layout_width="fill_parent">
            <TextView android:padding="2dp" android:layout_height="wrap_content" android:id="@+id/tvAuthorSub" android:layout_width="wrap_content"></TextView>
            <TextView android:padding="2dp" android:layout_height="wrap_content" android:id="@+id/tvNameCode" android:layout_width="wrap_content"></TextView>
        </TableRow>
    </TableLayout>
    
    <LinearLayout android:layout_width="fill_parent" android:id="@+id/linearLayout9" android:layout_height="wrap_content" android:background="#ff333333" android:padding="2dp">

            <TextView
                android:id="@+id/tvCorrect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />

            <ImageButton
                android:id="@+id/thInfoRemoveItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@android:drawable/ic_delete" />

	</LinearLayout>
</LinearLayout>


<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/llAddRegisterGlobal" android:orientation="vertical">
    <LinearLayout android:layout_marginTop="10dp" android:background="@color/background2" android:padding="5dp" android:id="@+id/linearLayout1" android:layout_height="wrap_content" android:layout_width="fill_parent">
        <TextView android:text="@string/thAddNewItem" android:textColor="#ffffffff" android:layout_height="wrap_content" android:id="@+id/textView3" android:layout_width="wrap_content"></TextView>
    </LinearLayout>

            <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llAddRegister"
        android:orientation="vertical" >
    
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/secondaryGreen"
        android:text="@string/tvThAddNewItem" 
        android:layout_margin="3dp"/>
    
    
        
                  <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llAddRegister"
         >       
        
        <Button android:textSize="12sp" 
            android:background="@drawable/btn_new_button_normal"
             android:layout_height="wrap_content" 
             android:layout_width="wrap_content" 
             android:text="@string/thGenus" 
             android:id="@+id/btNewGenus"/>
        
        <Button android:textSize="12sp" 
            android:background="@drawable/btn_new_button_normal"
             android:layout_height="wrap_content" 
             android:layout_width="wrap_content" 
             android:text="@string/btThEpSpecRed" 
             android:id="@+id/btNewSpecEpithet"/>
        
        <Button android:textSize="12sp" 
            android:background="@drawable/btn_new_button_normal"
             android:layout_height="wrap_content" 
             android:layout_width="wrap_content" 
             android:text="@string/btThInfraEpSpec" 
             android:id="@+id/btNewIfraSpecEpithet"/>
        
    </LinearLayout>
    
         </LinearLayout>
                  

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/llUnlinkTh" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/secondaryGreen"
            android:text="@string/tvUnlinkThInfo" />

        <Button
            android:id="@+id/btUnlinkTh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="@string/btThUnlink"
            android:background="@drawable/btn_new_button_normal"
            android:layout_marginTop="3dp" />
        
    </LinearLayout>

