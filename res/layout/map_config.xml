<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/rb1km"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="3dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mapConfigUTMPrecTitle" />

        <RadioGroup
            android:id="@+id/radioGroupUTMPrec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/rb10km"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/mapConf10km"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/rb1km"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mapConf1km"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/rb1m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mapConf1m"
                android:textSize="12sp" />
        </RadioGroup>
    </LinearLayout>

    <CheckBox
        android:id="@+id/cbShowCompass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mapConfShowCompass"
        android:textSize="12sp" />

    <CheckBox
        android:id="@+id/cbShowAltitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mapConfShowConfig"
        android:textSize="12sp" />

    <CheckBox
        android:id="@+id/cbShowMyTracks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mapConfShowMyTracks"
        android:textSize="12sp" />

    <CheckBox
        android:id="@+id/cbChangeMapMarkers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Canviar marcadors"
        android:textSize="12sp" />

</LinearLayout>